@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h3>Stylists</h3>
<hr />

@foreach(Stylist stylist in Model)
{
  <h4>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</h4>
}

@if (@Model.Count == 0)
{
  <p>No stylists have been added yet!</p>
} 
<br>
<form action="/stylists/Create" method="get">
<button type="submit" class="btn">Add new stylist</button>
</form>
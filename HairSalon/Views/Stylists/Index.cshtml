@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>; // gives access to neccessary list of items

<h1>Stylists</h1>

<ul>
  @foreach(Stylist stylist in Model)
  {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li> //property names of the object we pass in {id = item.ItemId} MUST match parameter names used by the target method (Details())
  }
</ul>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 
<br>
<p>@Html.ActionLink("Add new stylist", "Create")</p>